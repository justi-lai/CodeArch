{
  "name": "codex",
  "displayName": "Codex: The Code Archeology Assistant",
  "description": "Automates code archeology by analyzing git history, GitHub PRs, and generating AI-powered summaries of code intent",
  "version": "1.0.0",
  "publisher": "hackrice-team",
  "repository": {
    "type": "git",
    "url": "https://github.com/justi-lai/HackRice2025.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "github",
    "code archaeology",
    "history",
    "ai",
    "analysis"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codex.analyzeSelection",
        "title": "Codex: Analyze Selection"
      },
      {
        "command": "codex.configureApiKey",
        "title": "Codex: Configure API Key"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codex.analyzeSelection",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ]
    },
    "views": {
      "codex": [
        {
          "type": "webview",
          "id": "codex.resultsView",
          "name": "Results",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codex",
          "title": "Codex",
          "icon": "$(telescope)"
        }
      ]
    },
    "configuration": {
      "title": "Codex",
      "properties": {
        "codex.geminiModel": {
          "type": "string",
          "enum": [
            "gemini-2.5-pro",
            "gemini-2.5-flash",
            "gemini-2.0-flash-exp",
            "gemini-1.5-pro",
            "gemini-1.5-flash",
            "gemini-1.5-flash-8b",
            "gemini-pro"
          ],
          "default": "gemini-1.5-pro",
          "description": "Gemini model to use for generating summaries. Newer models like gemini-2.5-pro and gemini-2.0-flash-exp offer improved performance and capabilities."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}