{
  "name": "codescribe",
  "displayName": "CodeScribe: The Code Archeology Assistant",
  "description": "Automates code archeology by analyzing git history, GitHub PRs, and generating AI-powered summaries of code intent",
  "version": "1.0.0",
  "publisher": "hackrice-team",
  "repository": {
    "type": "git",
    "url": "https://github.com/justi-lai/HackRice2025.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "github",
    "code archaeology",
    "history",
    "ai",
    "analysis"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codescribe.analyzeSelection",
        "title": "CodeScribe: Analyze Selection"
      },
      {
        "command": "codescribe.configureApiKey",
        "title": "CodeScribe: Configure API Key"
      },
      {
        "command": "codescribe.selectModel",
        "title": "CodeScribe: Select Model"
      },
      {
        "command": "codescribe.showChat",
        "title": "CodeScribe: Show Chat"
      },
      {
        "command": "codescribe.hideChat",
        "title": "CodeScribe: Hide Chat"
      },
      {
        "command": "codescribe.addToChat",
        "title": "CodeScribe: Add to Chat"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codescribe.analyzeSelection",
          "when": "editorHasSelection",
          "group": "1_modification"
        },
        {
          "command": "codescribe.addToChat",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ]
    },
    "views": {
      "codescribe": [
        {
          "type": "webview",
          "id": "codescribe.resultsView",
          "name": "Results",
          "when": "true",
          "size": 1
        },
        {
          "type": "webview",
          "id": "codescribe.chatView",
          "name": "Chat",
          "when": "true",
          "size": 1
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codescribe",
          "title": "CodeScribe",
          "icon": "$(telescope)"
        }
      ]
    },
    "configuration": {
      "title": "CodeScribe",
      "properties": {
        "codescribe.aiProvider": {
          "type": "string",
          "enum": [
            "gemini",
            "openai",
            "claude",
            "huggingface"
          ],
          "default": "gemini",
          "description": "Choose your preferred AI provider for code analysis."
        },
        "codescribe.enableRenameDetection": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic detection of function renames in git history. When enabled, CodeScribe will trace a function's history even if it was renamed, providing more complete analysis at the cost of slightly longer processing time."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-c": "^0.21.0",
    "tree-sitter-c-sharp": "^0.21.0",
    "tree-sitter-cpp": "^0.21.0",
    "tree-sitter-go": "^0.21.0",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0"
  }
}
